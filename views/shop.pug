extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/products.css")

block content
    main
        if prod.length > 0
            .grid
                each product in prod
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://dictionary.cambridge.org/images/thumb/book_noun_001_01679.jpg?version=5.0.102", alt="A Book")
                        div.card__content
                            h2.product__price $89.99
                            p.product__description A random book about random things that happened to random people at random times for random reasons in random places.
                        .card__actions
                            button.btn Add to Cart
        else
            h2 No products available at this time.