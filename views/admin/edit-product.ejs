<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/addproduct.css">
    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <form class="product-form" action="/admin/edit-product/<%= prod._id %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= prod.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= prod.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= prod.price %>">
            </div>
            <div class="form-control">
                <label for="desc">Description</label>
                <textarea name="desc" id="desc" rows="5"><%= prod.desc %></textarea>
            </div>
            <button type="submit">Update</button>
        </form>
    </main>
<%- include('../includes/tail.ejs') %>