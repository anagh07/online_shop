<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css" />
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>

    <main>
      <% if (errorMsg) { %> 
        <div class="feedback-msg feedback-msg--error"><%= errorMsg %></div>
      <% } %>
      <% if(prod.length > 0) { %>
        <div class="grid">
            <% for(let product of prod) { %>
                <article class="card product-item">
                  <header class="card__header">
                      <h1 class="product__title"><%= product.title %></h1>
                  </header>
                  <div class="card__image">
                      <img
                      src="<%= product.imageUrl %>"
                      alt="<%= product.title %>"
                      />
                  </div>
                  <div class="card__content">
                      <h2 class="product__price">$<%= product.price %></h2>
                      <p class="product__description">
                        <%= product.desc %> 
                      </p>
                  </div>
                  <div class="card__actions">
                    <%- include('../includes/add-to-cart.ejs', { prod: product }) %> 
                  </div>
                </article>
            <% } %>
        </div>
        <%- include('../includes/pagination.ejs', { totalProducts: totalProducts, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, currentPage: currentPage }) %>
      <% } else { %>
        <p>No products at this time</p>
      <% } %>
    </main>
<%- include('../includes/tail.ejs') %>
