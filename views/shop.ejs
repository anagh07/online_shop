<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css" />
  </head>

  <body>
    <%- include('includes/nav.ejs') %>

    <main>
      <% if(prod.length > 0) { %>
        <div class="grid">
            <% for(let product of prod) { %>
                <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img
                    src="https://dictionary.cambridge.org/images/thumb/book_noun_001_01679.jpg?version=5.0.102"
                    alt="A Book"
                    />
                </div>
                <div class="card__content">
                    <h2 class="product__price">$89.89</h2>
                    <p class="product__description">
                    A random book about random things that happended to random people
                    at random places on random days for random reasons.
                    </p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
                </article>
            <% } %>
        </div>
      <% } else { %>
        <p>No products at this time</p>
      <% } %>
    </main>
<%- include('includes/tail.ejs') %>
