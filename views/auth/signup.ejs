<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/addproduct.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <div class="flex-container__login-container">
            <form class="login-form" action="/signup" method="POST">
                <% if (errorMsg) { %> 
                    <div class="feedback-msg feedback-msg--error"><%= errorMsg %></div>
                <% } %>
                <div class="form-control">
                    <label for="name">Username</label>
                    <input 
                        type="text" 
                        name="name" 
                        id="name" 
                        value="<%= enteredData.name %>" 
                        class="<%= errors.find(e => e.param === 'name') ? 'invalid' : '' %>"
                    >
                </div>
                <div class="form-control">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="<%= enteredData.email %>" class="<%= errors.find(e => e.param === 'email') ? 'invalid' : '' %>">
                </div>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        class="<%= errors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    >
                </div>
                <div class="form-control">
                    <label for="confirmPassword">Confirm Password</label>
                    <input 
                        type="password" 
                        name="confirmPassword" 
                        id="confirmPassword"
                        class="<%= errors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                    >
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="centered">
                    <button class="btn" type="submit">Signup</button>
                </div>
                <br>
                <hr>
                <div class="centered">
                    <p>Already have an account?</p>
                    <a href="/login" class="btn">Login</a>
                </div>
            </form>
        </div>
    </main>
<%- include('../includes/tail.ejs') %>