<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/addproduct.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <div class="flex-container__login-container">
            <form class="login-form" action="/reset-password" method="POST">
                <% if (errorMsg) { %> 
                    <div class="feedback-msg feedback-msg--error"><%= errorMsg %></div>
                <% } %>
                <div class="form-control">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email">
                </div>
                <div class="centered" style="margin-bottom: 1rem;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Proceed</button>
                </div>
            </form>
        </div>
    </main>
<%- include('../includes/tail.ejs') %>